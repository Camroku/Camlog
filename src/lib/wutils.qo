__export__ = [
    "htmlPage",
    "error",
    "redirect"
];

func htmlPage(page)
{
    print(%"Content-Type: text/html\n\n");
    print(page);
};

func error(errorcode)
{
    include config;
    header = format(read("views/header.html"));
    print(%"Content-Type: text/html\nStatus: $errorcode\n\n");
    print(format(read("views/error.html")));
};

func redirect(loc)
{
    print(%"Location: $loc\n\n");
};
